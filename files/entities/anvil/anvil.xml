<Entity>

  <PhysicsBodyComponent 
    uid="1" 
    allow_sleep="1" 
    angular_damping="0" 
    fixed_rotation="1" 
    is_bullet="0" 
    linear_damping="0"
    auto_clean="0"
    on_death_leave_physics_body="1"
    >
  </PhysicsBodyComponent>

  <PhysicsImageShapeComponent 
    body_id="1"
    centered="1"
    image_file="mods/anvil_of_destiny/files/entities/anvil/anvil_visual.png"
    material="templebrick_static"
    >
  </PhysicsImageShapeComponent>

  <!-- Wand 1 sacrificed indicator -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter.xml">
    <ParticleEmitterComponent
      _tags="emitter1"
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes1.png"
      />
  </Base>

  <!-- Wand 2 sacrificed indicator -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter.xml">
    <ParticleEmitterComponent
      _tags="emitter2"
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes2.png"
      />
  </Base>

  <!-- 2x tablet power indicator, pos 1 -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter_powered.xml">
    <ParticleEmitterComponent
      _tags="emitter1_powered"
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes1.png"
      />
  </Base>

  <!-- 2x tablet power indicator, pos 2 -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter_powered.xml">
    <ParticleEmitterComponent
      _tags="emitter2_powered"
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes2.png"
      />
  </Base>

  <!-- 1x tablet power indicator -->

  <ParticleEmitterComponent 
    _enabled="0"
    _tags="emitter_base_powered_up"
    emitted_material_name="spark_white"
    gravity.y="-20.0"
    lifetime_min="0.1"
    lifetime_max="1"
    emission_chance="100"
    count_min="1"
    count_max="1"
    render_on_grid="1"
    draw_as_long="1"
    fade_based_on_lifetime="0"
    area_circle_radius.min="0"
    area_circle_radius.max="0"
    velocity_always_away_from_center="0"
    airflow_force="0.1"
    airflow_time="1"
    airflow_scale="1"
    cosmetic_force_create="1"
    emit_cosmetic_particles="1"
    collide_with_grid="0"
    draw_as_long="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    image_animation_file="mods/anvil_of_destiny/files/entities/anvil/emitter.png"
    image_animation_speed="4"
    image_animation_loop="1"
    render_back="1"
    is_emitting="1"
    >
  </ParticleEmitterComponent>

  <!-- God rays -->
  <SpriteComponent
    image_file="mods/anvil_of_destiny/files/entities/anvil/god_rays.png"
    z_index="255"
    additive="1"
    alpha="0.5"
    offset_x="128"
    offset_y="100"
    >
  </SpriteComponent>

  <!-- Divine sparkles -->
  <Entity>
    <!-- offset it slightly -->
		<InheritTransformComponent>
			<Transform 
				position.x="5"
				position.y="-50" 
				>
			</Transform>
		</InheritTransformComponent>

    <ParticleEmitterComponent 
      _enabled="1"
      emitted_material_name="spark_white_bright"
      x_pos_offset_min="-40"
      x_pos_offset_max="40"
      y_pos_offset_min="-30"
      y_pos_offset_max="80"
      x_vel_min="-1"
      x_vel_max="1"
      y_vel_min="0"
      y_vel_max="1"
      gravity.y="10"
      lifetime_min="2"
      lifetime_max="5"
      count_min="1"
      count_max="1"
      render_on_grid="1"
      collide_with_grid="0"
      fade_based_on_lifetime="1"
      cosmetic_force_create="1"
      emit_cosmetic_particles="1"
      airflow_force="0"
      airflow_time="0"
      airflow_scale="0"
      emission_interval_min_frames="1"
      emission_interval_max_frames="1"
      is_emitting="1" >
    </ParticleEmitterComponent>
  </Entity>

	<AudioLoopComponent 
		_enabled="1" 
		auto_play="1" 
		calculate_material_lowpass="0" 
    file="mods/anvil_of_destiny/fmod/Build/Desktop/my_mod_audio.snd" 
    event_name="snd_mod/high_drone" 
    >
	</AudioLoopComponent>

  <CollisionTriggerComponent
    width="78"
    height="60" 
    required_tag="wand"
    destroy_this_entity_when_triggered="0"
    >
  </CollisionTriggerComponent>

  <CollisionTriggerComponent
    width="78"
    height="60" 
    required_tag="tablet"
    destroy_this_entity_when_triggered="0"
    >
  </CollisionTriggerComponent>

  <LuaComponent
    _tags="lua_component_anvil_trigger"
    script_collision_trigger_hit="mods/anvil_of_destiny/files/entities/anvil/anvil_trigger.lua"
    >
  </LuaComponent>

  <!-- For checking if the anvil has lost too many pixels -->

	<LuaComponent
		script_source_file="mods/anvil_of_destiny/files/entities/anvil/damage_checker.lua"
    execute_on_added="0"
    execute_every_n_frame="30"
    execute_times="-1"
    >
  </LuaComponent>

</Entity>
