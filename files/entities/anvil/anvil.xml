<Entity>

  <!--  GAME BUG: For now setting PhysicsImageShapeComponent::centered with a static PhysicsBodyComponent does not work properly, same with offets -->
  <!--  Which means if we use a static PhysicsBodyComponent, centered but me 0 and we can't use any offsets -->

  <PhysicsBodyComponent 
    fixed_rotation="1" 
    auto_clean="0"
    is_static="1"
    >
  </PhysicsBodyComponent>

  <PhysicsImageShapeComponent 
    centered="0"
    image_file="mods/anvil_of_destiny/files/entities/anvil/anvil_visual.png"
    material="anvilofdestinium"
    >
  </PhysicsImageShapeComponent>

  <!-- Wand 1 sacrificed indicator -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter.xml">
    <ParticleEmitterComponent
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes1.png"
      />
  </Base>

  <!-- Wand 2 sacrificed indicator -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter.xml">
    <ParticleEmitterComponent
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes2.png"
      />
  </Base>

  <!-- 2x tablet power indicator, pos 1 -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter_powered.xml">
    <ParticleEmitterComponent
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes1.png"
      />
  </Base>

  <!-- 2x tablet power indicator, pos 2 -->

  <Base file="mods/anvil_of_destiny/files/entities/anvil/rune_emitter_powered.xml">
    <ParticleEmitterComponent
      image_animation_file="mods/anvil_of_destiny/files/entities/anvil/runes2.png"
      />
  </Base>

  <!-- 1x tablet power indicator -->

  <ParticleEmitterComponent 
    _enabled="0"
    emitted_material_name="spark_white"
    gravity.y="-20.0"
    lifetime_min="0.1"
    lifetime_max="1"
    emission_chance="100"
    count_min="1"
    count_max="1"

    x_pos_offset_min="39"
    y_pos_offset_min="19"
    x_pos_offset_max="39"
    y_pos_offset_max="19"

    render_on_grid="1"
    draw_as_long="1"
    fade_based_on_lifetime="0"
    area_circle_radius.min="0"
    area_circle_radius.max="0"
    velocity_always_away_from_center="0"
    airflow_force="0.1"
    airflow_time="1"
    airflow_scale="1"
    cosmetic_force_create="1"
    emit_cosmetic_particles="1"
    collide_with_grid="0"
    draw_as_long="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    image_animation_file="mods/anvil_of_destiny/files/entities/anvil/emitter.png"
    image_animation_speed="4"
    image_animation_loop="1"
    render_back="1"
    is_emitting="1"
    >
  </ParticleEmitterComponent>

  <!-- God rays -->
  <SpriteComponent
    image_file="mods/anvil_of_destiny/files/entities/anvil/god_rays.png"
    z_index="255"
    additive="1"
    alpha="0.5"
    offset_x="90"
    offset_y="81"
    >
  </SpriteComponent>

  <!-- Divine sparkles -->
  <Entity name="anvil_of_destiny_divine_sparkles">

		<InheritTransformComponent />

    <ParticleEmitterComponent 
      _enabled="1"
      emitted_material_name="spark_white_bright"
      x_pos_offset_min="0"
      x_pos_offset_max="80"
      y_pos_offset_min="-60"
      y_pos_offset_max="40"
      x_vel_min="-1"
      x_vel_max="1"
      y_vel_min="0"
      y_vel_max="1"
      gravity.y="10"
      lifetime_min="2"
      lifetime_max="5"
      count_min="1"
      count_max="1"
      render_on_grid="1"
      collide_with_grid="0"
      fade_based_on_lifetime="1"
      cosmetic_force_create="1"
      emit_cosmetic_particles="1"
      airflow_force="0"
      airflow_time="0"
      airflow_scale="0"
      emission_interval_min_frames="1"
      emission_interval_max_frames="1"
      is_emitting="1" >
    </ParticleEmitterComponent>
  </Entity>

  <!-- the _enabled attribute MUST be present and set to 1 otherwise it doesn't work -->

	<AudioLoopComponent 
		_enabled="1" 
		auto_play="1" 
		calculate_material_lowpass="0" 
    file="mods/anvil_of_destiny/audio/anvil_of_destiny.snd" 
    event_name="high_drone" 
    >
	</AudioLoopComponent>

  <!-- This is where we will parent the wands to that we want to hide/store -->

  <Entity
    name="wand_storage"
    >
  </Entity>

  <!-- This is where we put the output wands (or later other entities?) to later retrieve and spit out -->

  <Entity
    name="output_storage"
    >
  </Entity>

